<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ContactDetailActivity"
    tools:showIn="@layout/activity_contact_detail">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher_round"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/create_contact_image"
        />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_contact_image"
        android:text="First Name"
        android:textSize="20sp"
        android:id="@+id/create_contact_first_name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_contact_first_name"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:text="Last Name"
        android:id="@+id/create_contact_last_name"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/create_contact_last_name"
    android:layout_marginTop="20dp"
    android:text="Phone Number"
    android:id="@+id/create_contact_phn_num"
    android:textSize="20sp"
    android:textStyle="bold"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_contact_phn_num"
        android:layout_marginTop="20dp"
        android:text="Address"
        android:textSize="20sp"
        android:id="@+id/create_contact_address"

        />

</RelativeLayout>